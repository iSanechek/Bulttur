<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_navigation"
            app:startDestination="@id/home_screen">

    <fragment android:id="@+id/home_screen"
              android:name="com.isanechek.balttur.fragments.home.HomeFragment"
              android:label="@string/title_home" >

        <action android:id="@+id/go_from_home_to_license"
                app:destination="@id/license_screen" />

        <action android:id="@+id/go_from_home_to_info"
                app:destination="@id/call_screen" />

        <action android:id="@+id/go_from_home_to_country"
                app:destination="@id/country_screen" />

        <action android:id="@+id/go_from_home_to_dev"
                app:destination="@id/dev_info_screen" />

        <action android:id="@+id/go_from_home_to_search"
                app:destination="@id/dev_info_screen"
                app:enterAnim="@anim/slide_in_down"
                app:exitAnim="@anim/exit_from_right"
                app:popEnterAnim="@anim/slide_in_down"
                app:popExitAnim="@anim/exit_from_right" />

    </fragment>

    <fragment android:id="@+id/license_screen"
              android:name="com.isanechek.balttur.fragments.license.LicenseFragment"
              android:label="License"/>

    <fragment android:id="@+id/call_screen"
              android:name="com.isanechek.balttur.fragments.info.InfoFragment"
              android:label="Call"/>

    <fragment android:id="@+id/country_screen"
              android:name="com.isanechek.balttur.fragments.country.CountryFragment"
              android:label="Country"/>

    <fragment android:id="@+id/dev_info_screen"
              android:name="com.isanechek.balttur.fragments.appinfo.AppInfoFragment"
              android:label="DevInfo"/>

    <fragment android:id="@+id/dev_info_search"
              android:name="com.isanechek.balttur.fragments.search.SearchFragment"
              android:label="Search"/>

</navigation>