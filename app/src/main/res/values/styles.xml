<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="md_corner_radius">16dp</item>
    </style>

    <style name="DashboardInfoSubTitle" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DignityTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDarkColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

</resources>
