<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_news_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp2"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/test_color"
    app:cardCornerRadius="@dimen/dp8">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dashboard_news_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:id="@+id/dashboard_news_item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dashboard_news_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_margin="@dimen/dp16"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="24sp"
                android:textStyle="bold" />

        </FrameLayout>

    </FrameLayout>


</com.google.android.material.card.MaterialCardView>