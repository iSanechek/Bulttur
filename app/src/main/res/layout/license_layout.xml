<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lic_icon_iv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/license_warning_white"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Лицензионное соглашение"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/home_beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/dp4"
                android:text="(beta)"
                android:textColor="#F4511E"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/license_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            tools:text="Нажимая кнопку Я СОГЛАСЕН, Вы соглашаетесь с лицензионом соглашение AverdSoft и Балт Тур " />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/license_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:text="Я согласен"
        android:textSize="20sp"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="@dimen/dp1"
        app:cornerRadius="@dimen/dp16"
        tools:ignore="HardcodedText" />

</FrameLayout>