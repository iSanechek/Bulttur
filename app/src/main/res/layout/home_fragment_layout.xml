<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="@dimen/dp8"
                 android:layout_marginEnd="@dimen/dp8"
                 android:layout_marginTop="24dp">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="start|center"
                      android:layout_marginStart="@dimen/dp16">
            <TextView
                    android:id="@+id/home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold|italic"
                    android:textSize="24sp"
                    android:textColor="@color/textColor"
                    android:text="БалтТур"
                    />

            <TextView
                    android:id="@+id/home_beta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginStart="1dp"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    android:text="(beta)"/>
        </LinearLayout>


        <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:id="@+id/home_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="1dp"
                android:padding="@dimen/dp8"
                android:layout_gravity="center|end"
                android:visibility="invisible"
                tools:visibility="visible"/>

        <ImageButton
                android:id="@+id/home_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="1dp"
                android:padding="@dimen/dp8"
                android:layout_gravity="center|end"
                android:visibility="invisible"
                tools:visibility="visible"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_refresh_black_24dp"/>


        <ImageButton
                android:id="@+id/home_menu_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp2"
                android:padding="@dimen/dp8"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_info_outline_black_24dp"/>

    </FrameLayout>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            app:cardCornerRadius="@dimen/dp8">

        <com.smarteist.autoimageslider.SliderView
                android:id="@+id/home_news_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>

    <com.skydoves.elasticviews.ElasticLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:id="@+id/home_search_container"
            app:layout_round="8"
            app:layout_scale="0.9"
            app:layout_backgroundColor="#ffffff">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/home_search_backgraound">
            <io.jmdg.typedkt.TypedKtView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="24dp"
                    android:textSize="14sp"
                    android:text="Поиск туров"
                    app:animateOnLoad="true"
                    app:delay="200"
                    app:isAnimatedByWord="false"
                    app:isLooped="false"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="end|center"
                       android:layout_marginEnd="@dimen/dp16"
                       android:layout_marginTop="@dimen/dp8"
                       android:layout_marginBottom="@dimen/dp8"
                       android:background="?attr/selectableItemBackground"
                       app:srcCompat="@drawable/ic_search_black_24dp"/>
        </FrameLayout>

    </com.skydoves.elasticviews.ElasticLayout>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/dp8">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp16"/>

    </com.google.android.material.card.MaterialCardView>



    <com.smarteist.autoimageslider.SliderView
            android:id="@+id/home_tours_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"/>

</LinearLayout>