<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:textColor="@color/textColor"
              android:textStyle="bold|italic"
              android:textSize="32sp"
              android:text="БалтТур"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_marginTop="@dimen/dp2"
              android:layout_marginEnd="20dp"
              android:layout_marginBottom="@dimen/dp8"
              android:layout_marginStart="20dp"
              android:textColor="@color/textColorSecondary"
              android:textSize="16sp"
              android:text="Автобусные туры по Европе"/>


    <com.google.android.material.button.MaterialButton android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:layout_marginTop="@dimen/dp16"
                                                       app:cornerRadius="@dimen/dp8"
                                                       android:id="@+id/dashboard_info_item_filter"
                                                       android:text="Подобрать тур"/>


</LinearLayout>